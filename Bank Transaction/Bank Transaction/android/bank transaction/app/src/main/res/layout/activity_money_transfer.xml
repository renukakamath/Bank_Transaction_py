<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="#172365"
    tools:context=".MoneyTransfer">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:textSize="20dp"
        android:layout_marginLeft="15dp"
        android:textColor="#fff"
        android:text="We assure safe transction" />

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:padding="10dp"
        android:textColor="#fff"
        android:clickable="false"
        android:focusableInTouchMode="false"
        android:inputType="textPersonName"
        android:text="my acno" />

    <EditText
        android:id="@+id/editTextTextPersonName2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:clickable="false"
        android:layout_marginTop="10dp"
        android:focusableInTouchMode="false"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:padding="10dp"
        android:layout_marginBottom="30dp"
        android:textColor="#fff"
        android:inputType="textPersonName"
        android:text="my balance" />

    <TextView
        android:id="@+id/otpmsg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:textSize="13dp"
        android:textStyle="bold"
        android:layout_marginLeft="15dp"
        android:textColor="#fff"
        android:text="We Sent an OTP to your registerd MobileNumber" />

    <EditText
        android:id="@+id/otp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:clickable="false"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:padding="10dp"
        android:textColorHint="#D3D3D3"
        android:layout_marginBottom="30dp"
        android:textColor="#fff"
        android:inputType="number"
        android:hint="Enter OTP to Continue " />

    <EditText
        android:id="@+id/editTextTextPersonName3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:padding="10dp"
        android:textColor="#fff"
        android:textColorHint="#BABABA"
        android:inputType="number"
        android:hint="Account number here" />

    <EditText
        android:id="@+id/editTextTextPersonName4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:padding="10dp"
        android:textColor="#fff"
        android:textColorHint="#B3B3B3"
        android:inputType="number"
        android:hint="amount" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button3"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:padding="10dp"
        android:textColor="#172365"
        android:background="#fff"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Proceed" />
</LinearLayout>